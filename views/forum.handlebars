<section class="container is-mobile is-desktop">
    <div class="columns">
        <div class="column is-3">
            <a class="button is-primary is-block is-alt is-large" href="/post">New Discussion</a>
        </div>
        <div class="container is-fluid">
            <ul>
                {{#each Post}}
                {{log this}}
                {{debugger}}
                <li>
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-64x64">
                                <img id="image-init" src="https://ui-avatars.com/api?name={{this.dataValues.name}}" />
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    {{!-- <strong>{{this.name}}</strong> --}}
                                    <large>{{this.dataValues.topic}}</large>
                                    <br>
                                    {{this.dataValues.body}}
                                </p>
                                <nav class="level">
                                    <div class="level-left">
                                        <a class="button is-small is-info is-outlined" href="/">
                                            <span class="icon">
                                                <i class="fa fa-reply"></i>
                                            </span>
                                            <span>Reply</span>
                                        </a>
                                    </div>
                                </nav>
                                <br>
                            </div>
                        </div>

                    </article>
                    <br>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>
<footer class="footer is-mobile is-desktop">
    <div class="container">
        <div class="content has-text-centered">
            <div class="columns is-centered">
                <div class="field is-grouped is-grouped-multiline">
                    <div class="control">
                        <div class="tags has-addons">
                            <a class="tag is-link" href="https://github.com/DrBailey13/project2">UNC
                                Charlotte Web Development Student Forum</a>
                            <span class="tag is-light">GitHub &nbsp;<i class="fa fa-github"></i></span>
                        </div>
                    </div>
                    <div class="control">
                        <div class="tags has-addons">
                            <a class="tag is-link">The source code is licensed</a>
                            <span class="tag is-light">MIT &nbsp;<i class="fa fa-github"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>