
<nav class="navbar is-white is-mobile is-desktop">
    <div class="navbar-brand">
        {{!-- Logo Image --}}
        <a class="navbar-item">
            <img src="../assets/images/longLogo.png" alt="logo" width="112" height="28">
        </a>
        {{!-- Hamburger Menu --}}
        <div class="navbar-burger burger" data-target="navMenuColorwhite-example">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <div id="navMenuColorwhite-example" class="navbar-menu">
        {{!-- NavBar Start (left) with tab--}}
        <div class="navbar-start">
            <div class="navbar-item has-dropdown is-hoverable">

                <a class="navbar-item is-active" id="discussTab" href="#">Discussions</a>
            </div>
        </div>
        <div class="navbar-end">
            {{!-- Search Bar --}}
            <div class="navbar-item">
                <form action="post/search" class="search-form" id="searchForm">
                    <input type="search" name="term" id="searchQuery" placeholder="Search topics...">
                </form>
            </div>
